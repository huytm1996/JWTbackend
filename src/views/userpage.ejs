<html lang="en">

<head>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="user-infor-container">
                <form method="POST" action="/users/create">

                    <div class="pb-3 s">
                        <h3>Create User :</h3>
                    </div>
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="username" class="form-label">User name</label>
                        <input name="username" type="text" class="form-control" id="username">
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6 pb-3">
                        <label for="password" class="form-label">Password</label>
                        <input name="password" type="password" class="form-control" id="password">
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                    </div>

                </form>

            </div>
            <div class="table-users  mt-3">
                <h3>Table User :</h3>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Email</th>
                            <th scope="col">User Name</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% listusers.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row">
                                    <%= index +1 %>
                                </th>
                                <td>
                                    <%= item.email %>
                                </td>
                                <td>
                                    <%= item.username %>
                                </td>
                                <td>
                                    <a href="/editview-user/<%=item.id%>">
                                        <button class="btn btn-warning">Edit</button>
                                    </a>
                                    <form style='display:inline' action="/delete-user/<%=item.id%>" method="POST"
                                        type="submit">
                                        <button class="btn btn-danger">
                                            Delete
                                        </button>
                                    </form>

                                </td>

                            </tr>

                            <% }) %>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>