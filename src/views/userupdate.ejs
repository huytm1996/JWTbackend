<html lang="en">

<head>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="edituser-infor-container">
                <form method="POST" action="/editview-user">
                    <div class="pb-3 s">
                        <h3>User Infor :</h3>
                    </div>
                    <input hidden value="<%=userview.id%>" name="id">
                    <div class="mb-3 col-6">
                        <label for="email" class="form-label">Email address</label>
                        <input value="<%=userview.email%>" name="email" type="email" class="form-control" id="email"
                            aria-describedby="emailHelp">
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6">
                        <label for="username" class="form-label">User name</label>
                        <input value="<%=userview.username%>" name="username" type="text" class="form-control"
                            id="username">
                    </div>
                    <div class="col-6"></div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary ">Submit</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</body>

</html>